#include "holberton.h"
#include <stdio.h>

/**
 * prime_num - function that checks if is prime or not.
 * @a: integer
 * @b: integer
 * Return: returns 1 if integer otherwise return 0
 */

int prime_num(int b, int a)
{
	if (a == 1)
		return (a);
	if (b % a == 0)
		return (0);
	else
		return (prime_num(b, a - 1));
}

/**
 * is_prime_number - returns primes
 * @n: int
 * Return: int if prime
 */

int is_prime_number(int n)
{
	if (n <= 1)
		return (0);
	else
		return (prime_num(n, n - 1));
}
